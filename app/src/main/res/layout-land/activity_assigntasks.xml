<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Hifz Application"
        android:textAllCaps="true"
        android:textColor="#212121"
        android:textSize="15sp"
        android:gravity="start"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

    <TextView
        android:id="@+id/textViewStudentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student ID:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Name:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewStudentAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Age:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewStudentClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Class:"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textViewSabaq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sabaq: "
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/textViewSabaqStatus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Sabaq:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextSabaqPara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Sabaq para "
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextSabaqSurah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Sabaq surah"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextSabaqVerse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Sabaq verse"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/textViewManzil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Manzil: "
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/textViewManzilStatus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Manzil:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextManzilPara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Manzil para "
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/textViewSabaqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sabaqi: "
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/textViewSabaqiStatus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Sabaqi:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextSabaqiPara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Sabai para "
        android:minHeight="48dp" />

    <Button
        android:id="@+id/buttonAssignTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="Assign" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
